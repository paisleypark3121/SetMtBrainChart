<UserControl x:Class="SetMyBrainWPFChart.ConnectionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SetMyBrainWPFChart"
             mc:Ignorable="d" Height="60" Width="150">
    <Grid Margin="0,0,0,0">
        <Ellipse
            Width="45"
            Height="45"
            Fill="{Binding Color}"
            HorizontalAlignment="Left"/>
        <TextBlock 
            HorizontalAlignment="Right" FontFamily="Century Gothic" FontSize="12" TextWrapping="Wrap" 
            Text="{Binding Label}"  
            VerticalAlignment="Center" />
    </Grid>
</UserControl>
