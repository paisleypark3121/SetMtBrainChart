<UserControl x:Class="SetMyBrainWPFChart.ConnectionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SetMyBrainWPFChart"
             x:Name="localCUC"
             mc:Ignorable="d" Height="75" Width="80">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Ellipse
            Grid.Row="0"
            Width="40"
            Height="40"
            Fill="{Binding Color}"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"/>
        <!--<TextBlock 
            Grid.Row="1"
            HorizontalAlignment="Left" FontFamily="Century Gothic" FontSize="12" TextWrapping="Wrap" 
            Text="{Binding Label}"  
            VerticalAlignment="Center" />-->
        <TextBlock 
            Grid.Row="10"
            HorizontalAlignment="Center" FontFamily="Century Gothic" FontSize="12" TextWrapping="Wrap" 
            Text="Connection"  
            VerticalAlignment="Center" />
    </Grid>
</UserControl>
