<UserControl x:Class="SetMyBrainWPFChart.TimeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SetMyBrainWPFChart"
             BorderThickness="1"
             x:Name="myUserControl"
             mc:Ignorable="d" Height="70" Width="250">
    <Grid>
        <Label Content="Elapsed:" FontWeight="Bold" Margin="3,40,37,0" />
        <Label Content="Start:" FontWeight="Bold" Margin="3,20,37,0" />
        <Label Content="Now:" FontWeight="Bold" Margin="3,0,10,0" />
        <Label x:Name="elapsed" ContentStringFormat='mm\:ss' Content="{Binding ElementName=myUserControl, Path=Elapsed}" HorizontalAlignment="Left" Margin="63,40,0,0" />
        <Label x:Name="start" ContentStringFormat='HH:mm:ss' Content="{Binding ElementName=myUserControl, Path=Start}" HorizontalAlignment="Left" Margin="63,20,0,0" />
        <Label x:Name="now" ContentStringFormat='yyyy-MM-dd HH:mm:ss' Content="{Binding ElementName=myUserControl, Path=Now}" HorizontalAlignment="Left" Margin="63,0,0,0" />
    </Grid>
</UserControl>
